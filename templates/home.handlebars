<div class="container">
    <div class="info">
        <div class="hello">{{hello}}</div>
        <h2 class="full-name">{{name}}</h2>
        <h4 class="position">{{position}}</h4>
        <ul class="details">
            {{#each details}}<li>
                <span class="{{this.class}}"></span>
                <a target="_blank" href="{{this.link}}">{{this.text}}</a>
            </li>{{/each}}
        </ul>
        <ul class="social">
            {{#each social}}<li>
                <a target="_blank" href="{{this.link}}">
                    <span class="{{this.class}}"></span>
                </a>
            </li>{{/each}}
        </ul>
    </div>
    <div class=" profile-pic">
        <div class="img-border">
            <img src="{{image_url}}" alt="{{image_alt_text}}" class="image">
        </div>
    </div>
</div>